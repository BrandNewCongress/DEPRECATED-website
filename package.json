{
  "name": "bnc-starter-kit",
  "version": "1.0.0",
  "description": "Brand New Congress Starter Kit",
  "main": "server.js",
  "dependencies": {
    "express": "^4.13.4",
    "express-history-api-fallback": "^2.0.0",
    "minilog": "^3.0.0",
    "mustache": "^2.2.1",
    "node-version-assets": "^1.1.0",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "react-router-redux": "^4.0.4",
    "redux": "^3.5.2",
    "rollbar": "^0.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.8.0",
    "foreman": "^1.4.1",
    "nodemon": "^1.9.2",
    "redux-devtools": "^3.3.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "scripts": {
    "clean": "rm -rf build && mkdir -p ./build/frontend/assets/js && mkdir -p ./build/backend",
    "prod-build-frontend": "webpack --config ./webpack/config.js",
    "prod-build-backend": "babel --out-dir ./src/build/backend --source-maps ./src/backend",
    "prod-version-assets": "node ./version.js",
    "prod-build": "npm run clean && npm run prod-build-frontend && npm run prod-build-backend && npm run prod-version-assets && npm run build-index",
    "postinstall": "[ \"$NODE_ENV\" = production ] && npm run prod-build",
    "build-index": "./tools/render-index ./src/frontend/index/index.mustache > ./build/frontend/index.html",
    "start": "node ./build/server.js",
    "predev-start": "npm run clean && npm run build-index",
    "dev-start": "nodemon -e js,hbs -w ./src/backend --exec ./tools/babel-run -- ./src/backend/server.js",
    "dev": "nf start -w --procfile ./tools/Procfile.dev",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrandNewCongress/starter-kit.git"
  },
  "keywords": [
    "BrandNewCongress",
    "Brand",
    "New",
    "Congress",
    "StarterKit"
  ],
  "author": "Saikat Chakrabarti",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/BrandNewCongress/starter-kit/issues"
  },
  "homepage": "https://github.com/BrandNewCongress/starter-kit#readme"
}
